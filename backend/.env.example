# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-generate-new-secret-key

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for production, use PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (Gmail example)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=EstateHub <noreply@estatehub.com>

# Site Configuration
SITE_NAME=EstateHub
SITE_URL=http://127.0.0.1:8000
